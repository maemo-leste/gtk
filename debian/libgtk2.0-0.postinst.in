#!/bin/sh

set -e

if [ -d /usr/share/doc/@SHARED_PKG@ -a ! -L /usr/share/doc/@SHARED_PKG@ ]; then
    if rmdir /usr/share/doc/@SHARED_PKG@; then
        ln -sf @COMMON_PKG@ /usr/share/doc/@SHARED_PKG@
    else
        echo "Warning: could not remove /usr/share/doc/@SHARED_PKG@." >&2
    fi
fi

case "$1" in
  configure)
    /usr/lib/@SHARED_PKG@/update-gtk-immodules
    /usr/lib/@SHARED_PKG@/update-gdkpixbuf-loaders
  ;;
esac

